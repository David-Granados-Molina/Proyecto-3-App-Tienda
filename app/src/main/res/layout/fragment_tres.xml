<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentTres"
    android:background="#BB86FC">

    <TextView
        android:id="@+id/encabezado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COMPLETE SUS DATOS"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:background="@color/black"
        android:textColor="@color/white"
        android:padding="15dp"
        android:textStyle="bold"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/perfila_imagen"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/texto1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:src="@drawable/icon_admin" />

    <EditText
        android:id="@+id/perfila_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/perfila_imagen"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:hint="Nombre"
        android:inputType="text"
        android:padding="10dp" />

    <EditText
        android:id="@+id/perfila_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/perfila_nombre"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:hint="Email"
        android:inputType="text"
        android:padding="10dp" />

    <EditText
        android:id="@+id/perfila_telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/perfila_email"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:hint="Telefono"
        android:inputType="phone"
        android:padding="10dp" />



    <Button
        android:id="@+id/perfila_boton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/perfila_telefono"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/botones1"
        android:inputType="text"
        android:padding="10dp"
        android:text="GUARDAR INFORMACION"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <Button
        android:id="@+id/perfila_boton3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/perfila_boton"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/botones1"
        android:inputType="text"
        android:padding="10dp"
        android:text="VISTA USUARIO"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <Button
        android:id="@+id/perfila_boton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/perfila_boton3"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/botones1"
        android:inputType="text"
        android:padding="10dp"
        android:text="CERRAR SESIÃ“N"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:visibility="gone"
        />

</RelativeLayout>