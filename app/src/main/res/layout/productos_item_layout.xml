<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="15dp"
    android:orientation="vertical"
    app:cardMaxElevation="15dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/producto_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/producto_imagen"
            android:layout_marginTop="20dp"
            android:text="Nombre del producto"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/producto_imagen"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:scaleType="center" />

        <TextView
            android:id="@+id/producto_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/producto_imagen"
            android:layout_marginTop="20dp"
            android:text="DescripciÃ³n del producto"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/producto_talla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/producto_descripcion"
            android:layout_marginTop="20dp"
            android:text="Talla"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/producto_precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/producto_nombre"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Precio"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/producto_cantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/producto_precio"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="00"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:visibility="gone"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>